<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thalmic.android.sample.helloworld.HelloWorldActivity"
    tools:ignore="MergeRootFrame">

    <TextView
        android:id="@+id/lock_state"
        android:text="@string/locked"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal|bottom"
        tools:ignore="SpUsage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/s_wait"
        android:id="@+id/simon_directions"
        android:layout_gravity="center_horizontal|top"
        android:textSize="50sp"
        android:textAlignment="center"
        android:contentDescription="@string/simon_says_descr" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:src="@drawable/solid_blue_double_tap2x"
        android:contentDescription="@string/gesture_image_descr" />

    <TextView
        android:id="@+id/text"
        android:text="@string/waiting"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        tools:ignore="SpUsage"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/moves_completed"
        android:id="@+id/moves_completed"
        android:layout_gravity="right|bottom"
        android:textSize="32sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="282dp"
        android:id="@+id/rainbow_reward"
        android:layout_gravity="center"
        android:contentDescription="image that rewards after 10 successful gestures"
        android:src="@drawable/rainbow"
        android:visibility="invisible" />

</FrameLayout>
